<!-- User Login Form -->
<div class="row">
	<div class="col-sm-12">
		<h2>Login Form:</h2>

		<%= form_tag(session_path, {class: "form-inline"}) do %>
			
			<div class="form-group">
				<%= label_tag :email, "Email:"  %>
				<%= text_field_tag :email, nil,  class: "form-control"  %>
			</div>
			
			<div class="form-group">
				<%= submit_tag "Login", class: "btn btn-primary" %>	
			</div>

		<% end %>

	</div>
</div>