<!-- Users Index Page -->
<h2>Users:</h2>
<%= link_to "Create New User", new_admin_user_path, class: "btn btn-primary action-button" %>
<table class="table table-striped">

	<thead class="all-bold">
		<tr>
			<td>ID</td>
			<td>First Name</td>
			<td>Last Name</td>
			<td>Email</td>
			<td>Addresses</td>
			<td>Orders</td>
			<td>Actions</td>
		</tr>
	</thead>
	
	<tbody>
		
		<% @users.each do |user| %>
	
			<tr>
				<td><%= user.id %></td>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email %></td>
				<td>
					<% if user.addresses %>
						<%= link_to "Addresses", admin_addresses_path(:search_user_id => user.id) %>
					<% end %>
				</td>
				<td><%= link_to "Orders", "#" %></td>
				<td>
					<%= link_to "Show", admin_user_path(user) %> | 
					<%= link_to "Edit", edit_admin_user_path(user) %> | 
					<%= link_to "Delete", admin_user_path(user), :method => :delete, :data => {:confirm=>'Are you sure?'} %>
				</td>
			</tr>

		<% end %>

	</tbody>
</table>