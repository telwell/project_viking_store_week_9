<h2>Show Page:</h2>
<table class="table table-striped">
	
	<thead>
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>Description</td>
		</tr>
	</thead>

	<tbody>	
		<tr>
			<td><%= @category.id %></td>
			<td><%= @category.name %></td>
			<td><%= @category.description %></td>
		</tr>
	</tbody>
</table>

<div class="action-links">
	<%= link_to "Edit", edit_admin_category_path(@category) %> | 
	<%= link_to "Delete", admin_category_path, :method => :delete, :data => {:confirm=>'Are you sure? This will nullify all associated Products and Orders!'} %>
</div>

<h2>Products in Category #<%= @category.id %>:</h2>
<table class="table table-striped">
	
	<thead>
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>SKU</td>
			<td>Description</td>
			<td>Price</td>
		</tr>
	</thead>

	<tbody>	
		<% @category.products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= link_to product.name, "#" %></td>
				<td><%= product.sku %></td>
				<td><%= product.description %></td>
				<td><%= number_to_currency(product.price) %></td>
			</tr>
		<% end %>
	</tbody>


</table>