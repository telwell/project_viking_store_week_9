<!-- Category Index Page -->
<h2>Categories:</h2>
<%= link_to "Create New Category", new_category_path, class: "btn btn-primary action-button" %>
<table class="table table-striped">

	<thead class="all-bold">
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>Description</td>
			<td>Actions</td>
		</tr>
	</thead>
	
	<tbody>
		
		<% @categories.each do |category| %>
	
			<tr>
				<td><%= category.id %></td>
				<td><%= category.name %></td>
				<td><%= category.description %></td>
				<td>
					<%= link_to "Show", category_path(category) %> | 
					<%= link_to "Edit", edit_category_path(category) %> | 
					<%= link_to "Delete", category_path(category), :method => :delete, :data => {:confirm=>'Are you sure? This will nullify all associated Products and Orders!'} %>
				</td>
			</tr>

		<% end %>

	</tbody>
</table>